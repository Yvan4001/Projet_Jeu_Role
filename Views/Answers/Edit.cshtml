@model Projet_Jeu_Role.Models.Answer

@{
    ViewData["Title"] = "Modification d'une réponse";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AnswerContent" class="control-label"></label>
                <input asp-for="AnswerContent" class="form-control" />
                <span asp-validation-for="AnswerContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituationEnterId" class="control-label"></label>
                <input asp-for="SituationEnterId" class="form-control" />
                <span asp-validation-for="SituationEnterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituationExitId" class="control-label"></label>
                <input asp-for="SituationExitId" class="form-control" />
                <span asp-validation-for="SituationExitId" class="text-danger"></span>
                </div>

                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
                <a class="btn btn-outline-primary" asp-action="Index">Retour à la liste</a>
            </form>
    </div>
</div>

</body>
</html>
