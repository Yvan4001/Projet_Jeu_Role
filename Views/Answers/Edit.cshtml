@model Projet_Jeu_Role.Models.Answer

@{
    ViewData["Title"] = "Modification d'une réponse";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AnswerContent" class="control-label"></label>
                <input asp-for="AnswerContent" class="form-control" />
                <span asp-validation-for="AnswerContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituationIdEnter" class="control-label"></label>
                <input asp-for="SituationIdEnter" class="form-control" />
                <span asp-validation-for="SituationIdEnter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituationIdExit" class="control-label"></label>
                <input asp-for="SituationIdExit" class="form-control" />
                <span asp-validation-for="SituationIdExit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
