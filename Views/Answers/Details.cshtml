@model Projet_Jeu_Role.Models.Answer

@{
    ViewData["Title"] = "Détails d'une réponse";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div>
        <h1>@ViewData["Title"]</h1>
        <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerContent)
        </dd>
        <dt class = "col-sm-2">
                Situtation d'entrée
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.SituationEnterId)*@
            @Html.DisplayFor(model => model.SituationEnter.SituationName)

        </dd>
        <dt class = "col-sm-2">
                Situtation de sortie
        </dt>
        <dd class = "col-sm-10">
                @*@Html.DisplayFor(model => model.SituationExitId)*@
                @Html.DisplayFor(model => model.SituationExit.SituationName)
        </dd>
    </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifier</a>
        <a class="btn btn-outline-primary" asp-action="Index">Retour à la liste</a>
    </div>
</body>
</html>
