@model Projet_Jeu_Role.Models.Answer

@{
    ViewData["Title"] = "Suppression d'un personnage";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="alert alert-danger" role="alert">
        <h2 class="alert-heading">Êtes vous sûr de vouloir supprimer cette situation ?</h2>
        <p>La suppression est une action irréversible. Les données ne seront pas récupérables après suppression.</p>
    </div>

<div>
    <h3>Détails du personnage</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnswerContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnswerContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SituationIdEnter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SituationIdEnter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SituationIdExit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SituationIdExit)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    </div>
</body>
</html>
