@model Projet_Jeu_Role.Models.Users

@{
    ViewData["Title"] = "Détails du compte";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

<div>
    <h4>@ViewData["Title"]</h4>

	@{switch (Model.Role)
		{
			case UserRole.Admin:
					<p>Admin</p>
					break;
			case UserRole.Player:
					<p>Player</p>
					break;
		}
	}
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifier</a>
    <a class="btn btn-outline-primary" asp-action="Index">Retour à la liste</a>
</div>
</body>
</html>
