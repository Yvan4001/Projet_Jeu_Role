@model Projet_Jeu_Role.Models.Situation

@{
    ViewData["Title"] = "Création d'une situation";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SituationName" class="control-label"></label>
                <input asp-for="SituationName" class="form-control" />
                <span asp-validation-for="SituationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SituationDescription" class="control-label"></label>
                <input asp-for="SituationDescription" class="form-control" />
                <span asp-validation-for="SituationDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div>
        <a asp-action="Index" class="btn btn-outline-primary">Retour à la liste</a>
    </div>

</body>
</html>
