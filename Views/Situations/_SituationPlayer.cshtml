@model Projet_Jeu_Role.Models.Situation
				
<br />
<dl class="row">
				<dt class="col-sm-2">
								@Html.DisplayFor(m => m.SituationName)
								<br/>
								@Html.DisplayFor(m => m.SituationDescription)
					</dt>
					<dt class="col-sm-10">
								@for (int i = 0; i < Model.AnswerEnter.Count; i++)
								{
												<a asp-controller="Situations" asp-action="Next" asp-route-id="@Model.AnswerEnter[i].Id">@Html.DisplayFor(m => m.AnswerEnter[i].AnswerContent)</a>
								}
					</dt>
</dl>